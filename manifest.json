{
  "manifest_version": 2,
  "version": "0.1.0",
  "name": "Favicons for links",
  "author": "Johannes Theiner",
  "homepage_url": "https://github.com/joethei/browser-favicon-links",


  "permissions": [
    "webRequest",
    "storage"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "favicon-link@joethei.xyz"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "node_modules/webextension-polyfill/dist/browser-polyfill.js",
        "main.js"
      ]
    }
  ]
}
